@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor
@using BeePM.Models
@inject BeePMDbContext Db
@{
    var user = HttpContextAccessor.HttpContext?.User;
    var isAuthenticated = user?.Identity?.IsAuthenticated ?? false;
    var username = user?.Identity?.Name ?? "";
    var currentUser = Db.Users.FirstOrDefault(u => u.Username == username);
    var fullName = currentUser?.FullName ?? username;
    var role = currentUser?.Role ?? "Guest";

    string badgeClass = role switch
    {
        "Admin" => "badge bg-danger",
        "Manager" => "badge bg-success",
        "Board" => "badge bg-warning text-dark",
        "Employee" => "badge bg-primary",
        _ => "badge bg-secondary"
    };
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - BeePM</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">BeePM</a>
        <div class="collapse navbar-collapse">
            @if (isAuthenticated)
            {
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Approval/CreateRequest">Yeni Talep</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Approval/MyRequests">Benim Taleplerim</a>
                    </li>
                    @if (role == "Manager" || role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Approval/PendingRequests">Onayımdaki Talepler</a>
                        </li>
                    }
                    @if (role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Approval/Logs">Approval Logs</a>
                        </li>
                    }
                </ul>
                <span class="@badgeClass">@fullName (@role)</span>
                <a href="/Account/Logout" class="btn btn-outline-light ms-2">Çıkış</a>
            }
            else
            {
                <a href="/Account/Login" class="btn btn-outline-light">Giriş Yap</a>
            }
        </div>
    </nav>

    <div class="container mt-3">
        @RenderBody()
    </div>
</body>
</html>
