@{
    Layout = null;
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - BeePM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- 🔹 Navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">🐝 BeePM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <!-- Süreç Başlat -->
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Approval" && currentAction == "CreateRequest" ? "active fw-bold" : "")"
                               asp-controller="Approval" asp-action="CreateRequest">📝 Süreç Başlat</a>
                        </li>

                        <!-- Benim Süreçlerim -->
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Approval" && currentAction == "MyRequests" ? "active fw-bold" : "")"
                               asp-controller="Approval" asp-action="MyRequests">🙋 Benim Süreçlerim</a>
                        </li>

                        <!-- Onayımdaki Süreçler -->
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Approval" && currentAction == "PendingRequests" ? "active fw-bold" : "")"
                               asp-controller="Approval" asp-action="PendingRequests">✅ Onayımdaki Süreçler</a>
                        </li>

                        <!-- Geçmiş Süreçler -->
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Approval" && currentAction == "History" ? "active fw-bold" : "")"
                               asp-controller="Approval" asp-action="History">📜 Geçmiş Süreçler</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            var currentUser = Context.RequestServices.GetRequiredService<BeePMDbContext>()
                            .Users.FirstOrDefault(u => u.Username == User.Identity!.Name);

                            if (currentUser?.Role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "FlowDesigner" ? "active fw-bold" : "")"
                                       asp-controller="FlowDesigner" asp-action="Index">🛠 Flow Designer</a>
                                </li>
                            }
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- 🔹 Main Content -->
    <div class="container my-3">
        @RenderBody() <!-- ✅ Hata sebebi buydu, artık içerik buraya gelecek -->
    </div>

    <!-- 🔹 Footer -->
    <footer class="border-top footer text-muted py-2">
        <div class="container">
            &copy; @DateTime.Now.Year - BeePM | Workflow & Approval System
        </div>
    </footer>

    <!-- 🔹 Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
