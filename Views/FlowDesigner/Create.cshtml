@model BeePM.Models.ApprovalFlow

<h2>Yeni Flow Adımı</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Request Type</label>
        <input asp-for="RequestType" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Step Number</label>
        <input asp-for="StepNumber" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Approver Role</label>
        <select asp-for="ApproverRole" class="form-select">
            <option>Employee</option>
            <option>Manager</option>
            <option>Board</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Action Type</label>
        <select asp-for="ActionType" class="form-select">
            <option>Onay</option>
            <option>Red</option>
            <option>İnceleme</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
