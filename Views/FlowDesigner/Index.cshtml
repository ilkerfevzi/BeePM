@model IEnumerable<BeePM.Models.ApprovalFlow>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Flow Listesi";
}

<h2>Flow Listesi</h2>
<hr />

<p>
    <a class="btn btn-primary" asp-action="Create">+ Yeni Süreç</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Oluşturulma</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flow in Model)
        {
            <tr>
                <td>@flow.Name</td>
                <td>@flow.Description</td>
                <td>@flow.CreatedAt?.ToString("dd.MM.yyyy HH:mm")</td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@flow.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@flow.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
