@model BeePM.Models.CompletedRequestsViewModel
@{
    ViewBag.Title = "Tamamlanan Talepler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3 class="mb-3">Tamamlanan Talepler</h3>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Başlık</th>
                <th>Talep Edilen</th>
                <th>Durum</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Requests)
            {
                <tr>
                    <td>@r.Title</td>
                    <td>@r.RequestedItem</td>
                    <td>
                        <span class="badge @(r.Status == "Approved" ? "bg-success" : "bg-danger")">
                            @r.Status
                        </span>
                    </td>
                    <td>@r.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
