@model BeePM.Models.ViewModels.RequestDetailsViewModel

<h2>@Model.Request.Title</h2>
<p><strong>Durum:</strong> @Model.Request.Status</p>
<p><strong>Oluşturan:</strong> @Model.Request.CreatedBy</p>
<p><strong>Oluşturulma Tarihi:</strong> @Model.Request.CreatedAt</p>

<hr />

<h4>Form Verileri</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Alan</th>
            <th>Değer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model.Elements)
        {
            <tr>
                <td>@e.Label</td>
                <td>
                    @(Model.FormData.ContainsKey(e.Label) ? Model.FormData[e.Label] : "—")
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

@if (Model.Request.Status == "Pending")
{
    <form asp-action="Decide" method="post">
        <input type="hidden" name="requestId" value="@Model.Request.Id" />
        <button type="submit" name="decision" value="Onay" class="btn btn-success">Onayla</button>
        <button type="submit" name="decision" value="Red" class="btn btn-danger">Reddet</button>
    </form>
}
else
{
    <div class="alert alert-info">
        Bu talep zaten <strong>@Model.Request.Status</strong> olarak kapatılmış.
    </div>
}
