@using BeePM.Models.ViewModels
@model ApprovalViewModel
@if (Model.ShowStep1) { /* Step1 butonları */ }
@if (Model.ShowStep2) { /* Step2 butonları */ }
<h2>Onay Süreci</h2>

@if (TempData["msg"] is string info)
{
    <div class="alert alert-info">@info</div>
}

<form asp-action="Start" method="post" class="mb-3">
    <button class="btn btn-primary">
        ▶ Workflow Başlat
    </button>
</form>

@if (Model.ShowStep1)
{
    <form asp-action="Step1" method="post" class="mb-3">
        <button name="decision" value="Onay" class="btn btn-success me-2">✔ Kullanıcı1 Onay</button>
        <button name="decision" value="Red" class="btn btn-danger">✘ Kullanıcı1 Red</button>
    </form>
}

@if (Model.ShowStep2)
{
    <form asp-action="Step2" method="post" class="mb-3">
        <button name="decision" value="Onay" class="btn btn-success me-2">✔ Kullanıcı2 Onay</button>
        <button name="decision" value="Red" class="btn btn-danger">✘ Kullanıcı2 Red</button>
    </form>
}
<form asp-action="Reset" method="post" class="mb-3">
    <button class="btn btn-outline-secondary">↺ Reset</button>
</form>

<hr />
<h4>Geçmiş Log</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Mesaj</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.Timestamp.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@log.Message</td>
            </tr>
        }
    </tbody>
</table>
