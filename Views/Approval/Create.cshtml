@model BeePM.Models.ApprovalRequest

<h2>Yeni Onay Talebi</h2>

<form asp-action="CreateRequest" method="post">
    <div class="form-group">
        <label>Başlık</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Talep Nedeni</label>
        <textarea asp-for="Reason" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Talep Edilen</label>
        <input asp-for="RequestedItem" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Gönder</button>
</form>
