@using BeePM.Models.ViewModels
@model PendingRequestsViewModel
@{
    ViewBag.Title = "Onay Bekleyen Talepler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3 class="mb-3">Onay Bekleyen Talepler</h3>
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Başlık</th>
                <th>Talep Eden</th>
                <th>Durum</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Requests)
            {
                <tr>
                    <td>@r.Title</td>
                    <td>@r.CreatedBy</td>
                    <td><span class="badge bg-warning">@r.Status</span></td>
                    <td>
                        <form asp-action="Decide" method="post" class="d-inline">
                            <input type="hidden" name="requestId" value="@r.Id" />
                            <button type="submit" name="decision" value="Onay" class="btn btn-success btn-sm">Onayla</button>
                            <button type="submit" name="decision" value="Red" class="btn btn-danger btn-sm">Reddet</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
