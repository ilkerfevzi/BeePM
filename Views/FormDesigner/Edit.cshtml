@model BeePM.Controllers.FormDesignerViewModel

<h2>Form Designer: @Model.Template.Name</h2>

<form asp-action="AddField" method="post">
    <input type="hidden" name="templateId" value="@Model.Template.Id" />

    <div class="mb-3">
        <label class="form-label">Label</label>
        <input type="text" name="Label" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Alan Tipi</label>
        <select name="FieldType" class="form-select">
            <option>Textbox</option>
            <option>Combobox</option>
            <option>Radio</option>
            <option>Checkbox</option>
            <option>Numeric</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Seçenekler (JSON)</label>
        <input type="text" name="Options" class="form-control" placeholder='["Laptop","Telefon"]' />
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" name="IsRequired" class="form-check-input" value="true" />
        <label class="form-check-label">Zorunlu</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Sıra No</label>
        <input type="number" name="Order" class="form-control" value="0" />
    </div>

    <button type="submit" class="btn btn-success">Alan Ekle</button>
</form>

<hr />

<h4>Mevcut Alanlar</h4>
<table class="table table-bordered">
    <tr>
        <th>Label</th>
        <th>Tip</th>
        <th>Zorunlu</th>
        <th>Sıra</th>
        <th>Seçenekler</th>
    </tr>
    @foreach (var f in Model.Fields)
    {
        <tr>
            <td>@f.Label</td>
            <td>@f.FieldType</td>
            <td>@(f.IsRequired ? "Evet" : "Hayır")</td>
            <td>@f.Order</td>
            <td>@f.Options</td>
        </tr>
    }
</table>
